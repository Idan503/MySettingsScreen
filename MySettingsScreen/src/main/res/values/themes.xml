<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MySettingsScreen" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
    </style>


    <style name="CustomTheme.activated" parent="Theme.AppCompat.DayNight">
        <!-- Custom Colors for activated components may be added in the future -->
    </style>

    <style name="CustomTheme.toggle" parent="CustomTheme.activated">
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
    </style>


    <!-- Icon of Tile - Set by icon tint -->
    <style name="TileIcon">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">18dp</item>
        <item name="android:tint">@color/icon_tint</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>


    <!-- Outer Card of Tiles -->

    <style name="TileCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/background_primary</item>
    </style>

    <style name="TileCard.Clickable" parent="TileCard">
        <item name="android:clickable">true</item>
        <item name="rippleColor">@android:color/darker_gray</item>
    </style>


    <style name="IncludeTileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toEndOf">@id/tile_IMG_icon</item>
    </style>

    <!-- Inner Layout of Tiles -->

    <style name="InnerTileTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Text of Tiles -->

    <style name="TextView.TileText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextView.TileTitle" parent="TextView.TileText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.TileDescription" parent="TextView.TileText">
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextView.TileTitle.Resizable" parent="TextView.TileTitle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
    </style>

    <style name="TextView.TileDescription.Resizable" parent="TextView.TileDescription">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>


    <!-- Outline Button Style -->
    <style name="ThemeOverlay.MyApp.OutlinedButton" parent="">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>

</resources>