<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tile_CARD_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:rippleColor="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/tile_LAY_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="12dp"
        android:paddingEnd="2dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tile_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tile_LBL_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />


    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/CustomTheme.switchState"
        android:layout_gravity="end|center"
        android:id="@+id/tile_SW_switch"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/tile_LAY_labels" />


</com.google.android.material.card.MaterialCardView>